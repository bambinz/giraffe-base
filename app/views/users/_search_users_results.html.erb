<% users.each do |user| %>
	<div class="row">
		<div class="small-3 columns">
			<%= user.username %>
		</div>
		<div class="small-3 columns">
			<%= link_to "View Profile", users_show_friend_path(id: @current_user.id, friend_id: user.id), class: "button tiny" %>
		</div>
		<div class="small-6 columns">
			<% if !@current_user.has_friend_request_with?(user) %>
				<%= link_to "Send Friend Request", key_requests_send_friend_request_path(friend_id: user.id), remote: true, class: "button tiny send_friend_request_button" %>
			<% else %>
				<%= link_to "Sent", "#", disabled: true, class: "button tiny send_friend_request_button" %>
			<% end %>
		</div>

	</div>
<% end %>